<div class="container visible">
   <div class="devise-container">
       <div class="row">
         <div class="col-sm-3"></div>
         <div class="col-sm-6">

			<h2>Resend unlock instructions</h2>

			<%= bootstrap_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
			  <%= devise_error_messages! %>

			  <div class="field">
			    <%= f.email_field :email, autofocus: true %>
			  </div>

			  <div class="actions">
			  	<button type="submit" class="btn btn-primary col-lg-12">Resend unlock instructions</button><br>
			  </div>
			<% end %>

			<%= render "devise/shared/links" %>
			</div>
		</div>
	</div>
</div>
